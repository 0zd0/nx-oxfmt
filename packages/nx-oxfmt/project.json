{
    "name": "nx-oxfmt",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/nx-oxfmt/src",
    "projectType": "library",
    "release": {
        "version": {
            "manifestRootsToUpdate": ["dist/{projectRoot}"],
            "currentVersionResolver": "git-tag",
            "fallbackCurrentVersionResolver": "disk"
        }
    },
    "tags": [],
    "targets": {
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/nx-oxfmt",
                "main": "packages/nx-oxfmt/src/index.ts",
                "tsConfig": "packages/nx-oxfmt/tsconfig.lib.json",
                "assets": [
                    "packages/nx-oxfmt/*.md",
                    {
                        "input": "./packages/nx-oxfmt/src",
                        "glob": "**/!(*.ts)",
                        "output": "./src"
                    },
                    {
                        "input": "./packages/nx-oxfmt/src",
                        "glob": "**/*.d.ts",
                        "output": "./src"
                    },
                    {
                        "input": "./packages/nx-oxfmt",
                        "glob": "generators.json",
                        "output": "."
                    },
                    {
                        "input": "./packages/nx-oxfmt",
                        "glob": "executors.json",
                        "output": "."
                    }
                ]
            }
        },
        "nx-release-publish": {
            "options": {
                "packageRoot": "dist/{projectRoot}"
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint"
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "packages/nx-oxfmt/jest.config.cts"
            }
        }
    }
}
